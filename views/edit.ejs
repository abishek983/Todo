<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Todo-app</title>
</head>
<body>
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
        <h1 class="display-4 py-2 text-truncate">Todo-App</h1>
        <div class="px-2">
            <form action="/" method="POST" class="justify-content-center">
                <div class="form-group">
                    <label class="sr-only">items</label>
                    <input type="text" class="form-control" placeholder="Enter Todo items" name="item">    
                </div>
                <button type="Add" class="btn btn-primary btn-lg">Add Todo</button> <br> <br> 
            </form>            
         </div>

         <!-- Show the todo items -->
        
         <div class="todo-list px-2 mx-auto " >
            <% task.forEach(data =>{ %>
                <div class="alert alert-primary text-left d-flex justify-content-between" role="alert">
                    <% if(data._id == idTask) { %>
                        <form action="/edit/<%= data._id %>" method="POST">
                        <input type="text" value=<%= data.item %> name="content">
                        <span class="float-right">
                            <button type="submit" class="btn btn-success">Confirm </button>
                            <a href="/" class="cancel btn btn-danger">cancel</a>
                        </span>
                        </form>
                    <% } else { %>
                    <%= data.item%>
                    <span class="float-right">
                    <a href="/edit/<%= data._id %>" class="edit "> <div class="fas fa-edit alert-success"></div> </a>
                    <a href="/remove/<%= data._id %>" class="remove"> <div class="fas fa-times alert-danger"></div> </a>
                    </span>
                    <% } %>
                </div>
            <% }) %>
         </div> 
         

    </div>                
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script> 
</body>
</html>